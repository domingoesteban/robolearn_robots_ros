<launch>
  <arg name="effort_control" default="True"/>

  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find manipulator2d_control)/config/manipulator2d_position_control.yaml" command="load" unless="$(arg effort_control)"/>

  <!--By default effort control  -->
  <rosparam file="$(find manipulator2d_control)/config/manipulator2d_effort_control.yaml" command="load" if="$(arg effort_control)"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
	output="screen" ns="/manipulator2d" args="joint_state_controller
                                              joint0_position_controller
                                              joint1_position_controller
                                              joint2_position_controller"/>

  <!-- convert joint states to TF transforms for rviz, etc -->
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
    <remap from="/joint_states" to="/manipulator2d/joint_states" />
  </node>

</launch>
